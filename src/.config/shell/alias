y() {
    local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
    yazi "$@" --cwd-file="$tmp"

    if cwd="$(command cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
	    builtin cd -- "$cwd"
    fi

    rm -f -- "$tmp"
}

# Alias
alias ls="ls --color=auto"
alias grep="grep --color=auto"

# Default
export PATH=$PATH:"$HOME"/.local/bin
export EDITOR="nvim"
export FILES="yazi"

# vim: ft=sh
